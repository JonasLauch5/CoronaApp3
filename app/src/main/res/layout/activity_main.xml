<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_tvCoronaApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allan"
        android:text="CORONA-APP"
        android:textAlignment="center"
        android:textColor="#232121"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/id_btAnmeldung"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:background="@drawable/button2"
                android:text="Anmeldung"
                android:textSize="14sp" />

            <Button
                android:id="@+id/id_btCoronaPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:background="@drawable/button2"
                android:text="Zertifikate"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/id_btTickets"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="10"
                android:background="@drawable/button2"
                android:text="Tickets"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/id_tvNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50px"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/anton"
        android:text="News"
        android:textAlignment="center"
        android:textColor="#232121"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>